(defun digits (num)
  (let ((digs ())
        (wnum num))
    (loop while (> wnum 0) do
         (push (mod wnum 10) digs)
         (setf wnum (truncate wnum 10)))
    digs))

(defun factorial (num)
  (if (zerop num)
      1
      (* num (factorial (- num 1)))))

(defun factorion-p (num)
  (let ((digs (digits num))
        (sum-fact 0))
    (loop for i in digs do
         (setf sum-fact (+ sum-fact (factorial i))))
    (equal sum-fact num)))