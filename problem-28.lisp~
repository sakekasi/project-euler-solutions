(defun num-levels (dim)
  (/ (+ dim 1) 2))

(defun addend (level)
  (* 2 (- level 1)))

(defun diag-sum (dim)
  (let ((num 1)
        (sum 1))
    (loop for lev from 2 to (num-levels dim) do
         (loop for i from 1 to 4 do
              (print num)
              (setf num (+ num (addend lev)))
              (setf sum (+ sum num))))
    sum))