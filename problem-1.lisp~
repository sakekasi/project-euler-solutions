;; defines the function which sums all natural numbers below x
;; with factors 3 or 5.
(defun natural-below (x)
  (let ((i 0) (sum 0))
     (loop (when (> i (- x 1) ) (return sum))
        (if (or
   	      (equal 0 (mod i 3))
	      (equal 0 (mod i 5)))
          (setq sum (+ sum i)))
        (incf i))))
(print (natural-below 1000))
