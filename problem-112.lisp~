(labels ((digits (num) ((map 'vector #'digit-char-p (princ-to-string n)))))

  (defun increasing-p (num)
    (let ((digs (digits num)))
      (not
       (loop for i from 1 to (1- (length digs)) do
            (if (> (svref digs (1- i)) (svref digs i))
                (return t))))))
  
  (defun decreasing-p (num)
    (let ((digs (digits num)))
      (not
       (loop for i from 1 to (1- (length digs)) do
            (if (< (svref digs (1- i)) (svref digs i))
                (return t)))))))
  